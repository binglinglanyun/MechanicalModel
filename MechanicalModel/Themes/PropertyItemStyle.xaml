<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MechanicalModel.Themes">
    <Style TargetType="StackPanel" x:Key="PropertyItemStyle">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="PropertyNameStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Uid="Style_3" TargetType="TextBox" x:Key="PropertyValueStyle" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="200"/>
    </Style>
</ResourceDictionary>