            <Border Style="{DynamicResource SplitBorderStyle}"/>

            <Label Content="曲线和云图计算结果数据导入" Style="{DynamicResource LabelBoldTextStyle}" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,20" Visibility="Collapsed">
                <TextBlock Text="已有曲线或云图计算结果导入:" VerticalAlignment="Center"/>
                <Button Content="导入" Command="{Binding QuXianAndYunTuImportButtonClick}" Margin="20,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100"/>
            </StackPanel>

            <Label Content="曲线和云图显示" Style="{DynamicResource LabelBoldTextStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,20">
                <TextBlock Text="曲线或云图显示:" VerticalAlignment="Center"/>
                <Button Content="显示" Command="{Binding QuXianAndYunTuXianShiButtonClick}" Margin="20,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100"/>
            </StackPanel>

            <TabControl Margin="25,0,0,0" Visibility="{Binding QuXianAndYunTuVisibility}" SelectedIndex="1">
                <TabItem Header="制动扭矩随时间变化曲线">
                    <Image Source="{Binding ZhiDongNiuJuSourceUri}" Margin="40,10,0,0" HorizontalAlignment="Left" Height="400" Width="700"/>
                </TabItem>
                <TabItem Header="动轮转速随时间变化曲线">
                    <Image Source="{Binding DongLunZhuanSuSourceUri}" Margin="40,10,0,0" HorizontalAlignment="Left" Height="400" Width="650"/>
                </TabItem>
                <TabItem Header="工作腔内充液量随时间变化曲线">
                    <Image Source="{Binding ChongYeLiangSourceUri}" Margin="40,0,0,0" HorizontalAlignment="Left" Height="400" Width="650"/>
                </TabItem>
                <TabItem Header="缓速器出口压力随时间变化曲线">
                    <Image Source="{Binding ChuKouYaLiSourceUri}" Margin="40,0,0,0" HorizontalAlignment="Left" Height="400" Width="650"/>
                </TabItem>
                <TabItem Header="制动扭矩随动轮转速变化曲线">
                    <Image Source="{Binding ZhiDongNiuJuBianHuaSourceUri}" Margin="40,10,0,0" HorizontalAlignment="Left" Height="400" Width="650"/>
                </TabItem>
            </TabControl>
        </StackPanel>   
    </Grid>
</UserControl>
